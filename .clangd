CompileFlags:
  Add:
    - -std=c++98
    - -Wall
    - -Wextra
    - -Werror
    - -ggdb
    - -Iinclude
    - -Iinclude/core
    - -Iinclude/parser
    - -Iinclude/values
  Remove:
    - -std=c++*
    - -std=gnu++*

Diagnostics:
  ClangTidy:
    Add:
      - readability-*
      - performance-*
      - bugprone-*
      - cppcoreguidelines-*
    Remove:
      - modernize-*
      - cppcoreguidelines-pro-bounds-pointer-arithmetic
      - cppcoreguidelines-avoid-c-arrays

Index:
  Background: Build